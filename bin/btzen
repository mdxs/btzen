import argparse
import logging
import time

logging.basicConfig(level=logging.DEBUG)

import braitebt

parser = argparse.ArgumentParser()
parser.add_argument('device', help='MAC address of device')
args = parser.parse_args()

print('connecting to {}...'.format(args.device))
dev = braitebt.connect(args.device)
print('connected to {}'.format(dev.Name))

readers = {
    'pressure': braitebt.read_pressure(dev),
    'temperature': braitebt.read_temperature(dev),
    'humidity': braitebt.read_humidity(dev),
    'light': braitebt.read_light(dev),
}
print('sensors initialized')

data = sorted([(n, r) for n, r in readers.items() if r])
while True:
    for n, r in data:
        print('{}: {:.1f}'.format(n, next(r)))
    print()
    time.sleep(1)

