import argparse
import asyncio
import logging

import btzen


async def read_sensor(name, reader):
    while True:
        t1 = loop.time()
        value = await reader.read_async()
        value = '{:.1f}'.format(value)
        t2 = loop.time()
        print('{}: {} ({:.4f}s)'.format(name, value, t2 - t1))
        await asyncio.sleep(-loop.time() % 1)

async def read_accelerometer(bus, device):
    reader = bus.sensor(device, btzen.Accelerometer, notifying=True)
    reader.set_interval(0.2)
    try:
        while True:
            t1 = loop.time()
            values = await reader.read_async()
            values = ', '.join('{:.4f}'.format(v) for v in values)
            t2 = loop.time()
            print('accelerometer: {} ({:.4f}s)'.format(values, t2 - t1))
    finally:
        reader.close()


logging.basicConfig(level=logging.DEBUG)

parser = argparse.ArgumentParser()
parser.add_argument('device', help='MAC address of device')
args = parser.parse_args()

print('connecting to {}...'.format(args.device))
bus = btzen.Bus()
bus.connect(args.device)

names = ['pressure', 'temperature', 'humidity', 'light']
classes = [
    btzen.Pressure, btzen.Temperature, btzen.Humidity, btzen.Light,
]
readers = ((n, bus.sensor(args.device, c)) for c, n in zip(classes, names))
readers = {n: r for n, r in readers if r is not None}
print('sensors initialized')

loop = asyncio.get_event_loop()
sensors = sorted([(n, r) for n, r in readers.items() if r])
tasks = [read_sensor(n, r) for n, r in sensors]
tasks.append(read_accelerometer(bus, args.device))
try:
    loop.run_until_complete(asyncio.gather(*tasks))
finally:
    for r in readers.values():
        r.close()

# vim: sw=4:et:ai
